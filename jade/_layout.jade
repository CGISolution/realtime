- ng = ['resource', 'route', 'animate', 'cookies', 'sanitize'];
- version = '1.3.0';
- ngi18nVersion = '1.2.15';
- ngLocale = 'en-us';

doctype html
html(lang='en', ng-app='realtime')
    head
        | @{meta}

        | @{head}

        link(type='text/css', rel='stylesheet', href='/css/main.css')

        script(type='text/javascript', src='/js/ui.bootstrap.js')

        meta(http-equiv="X-UA-Compatible", content="IE=10")
        meta(name="format-detection", content="telephone=no")
        meta(name="viewport", content="width=1024, user-scalable=yes")
        meta(name="robots", content="all,follow")

        | @{favicon('favicon.ico')}

        title RT Blog

        base(href='/')

    body
        div.site-container
            | @{body}

